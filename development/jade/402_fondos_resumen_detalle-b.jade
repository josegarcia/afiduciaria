    body.uno.l-logged.fondos.resumen
        include sections/header/200
        include sections/nav
        include sections/main/402-b
        include sections/footer
        include sections/snippets/scripts
        script(src='../javascript/libs/uform/uform.js')
        script.
            // Abrir modal
            function open_modal(win) {
                $('.modals').fadeIn();
                $('.modals > div').removeClass('active');
                $('.modals').find(win).addClass('active');
            }

            $('#cargando').on('click', function(){
                open_modal('.loader');
            });

            $('#detalles').on('click', function(){
                open_modal('.details');
            });

            $('#estado').on('click', function(){
                open_modal('.status');
            });

            $('#exito').on('click', function(){
                open_modal('.success');
            });

            $('#popup').on('click', function(){
                open_modal('.popup-tyc');
            });

            $('#popup2').on('click', function(){
                open_modal('.popup2-tyc');
            });
            
            // Cerrar modal
            $('.modals .loader').on('click', function(){
                $(this).parent('.modals').fadeOut()
            });

            $('.modals .btn-close').on('click', function(){
                $(this).parents('.modals').fadeOut();
                $('.modals > div').removeClass('active');
            });

